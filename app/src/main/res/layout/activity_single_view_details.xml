<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/view"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:background="#ffffff">
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SingleViewDetails">
<TextView
    android:id="@+id/topic"
    android:layout_marginTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="26sp"
    android:textColor="#9C27B0"
    android:textStyle="bold"
    android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/aboutPage"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#e91e63"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/aboutDetails"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/featurePage1"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#e91e63"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/featuresDetails"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/promotionPage1"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#e91e63"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/promotionDetails"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/extras"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#e91e63"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/extrasDetails"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000000"
        />
    <Button
        android:id="@+id/installnow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#26A69A"
        android:textColor="#ffffff"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
    </ScrollView>