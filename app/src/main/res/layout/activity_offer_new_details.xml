<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferNewDetails"
    android:orientation="vertical"
    android:padding="8dp">
    <TextView
        android:id="@+id/topic2"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"

        android:textColor="#9C27B0"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/availPage"
        android:layout_marginTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#e91e63"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/aboutDetailsold"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="8dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/promoPage"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#e91e63"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/promoDetails"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="8dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/thingPage"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#e91e63"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/thingDetails"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="8dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/tcPage1"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#e91e63"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tcDetails"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="8dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/validityPage"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#e91e63"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/validityDetails"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="8dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#E65100"
        />
    <Button
        android:id="@+id/availnow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#26A69A"
        android:textColor="#ffffff"
android:text="Avail Now"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
</ScrollView>