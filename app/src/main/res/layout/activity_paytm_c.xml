            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="PAYTM PAYMENT BANK"
            android:background="#ffffff"
            android:textColor="#9C27B0"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
        android:id="@+id/txt"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:id="@+id/view"
                android:layout_below="@id/txt"
                >
            </View>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/view"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:scrollbars="none">


                <LinearLayout
                    android:id="@+id/activity_aircel_u"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="2dp"
                    tools:context="helpybook.as.popo.ltd.AircelU">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingLeft="16dp"
                        android:textColor="#2196f3"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/lay_border"
                        android:text="Reach Paytm Website"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/lay_border"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="webs"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/web"
                            android:layout_marginRight="16dp"/>
                    </LinearLayout>
                    <TextView
